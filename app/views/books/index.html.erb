<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.rating %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', book %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <% end %>
      <% if user_signed_in? %>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <li><%= link_to 'New Book', new_book_path %></li>
<% end %>
